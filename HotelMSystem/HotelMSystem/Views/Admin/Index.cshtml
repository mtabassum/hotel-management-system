    <table class="table">
        <tr>
            <th>
                <h4>Hotel Name</h4>
            </th>
            <th>
                <h4>Star Rating</h4>
            </th>
            <th>
                <h4>Detail</h4>
            </th>
            <th>
                <h4>Edit</h4>
            </th>
            <th>
                <h4>Delete</h4>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.hotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rating)
                </td>
                <td>
                    <a href="/Admin/Detail/@item.id">Detail</a>
                </td>
                <td>
                    <a href="/Admin/Edit/@item.id"><i class="glyphicon glyphicon-edit"></i></a>
                </td>
                <td>
                    <a href="/Admin/Delete/@item.id"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }

    </table>
</div>